    <Window x:Class="GingerPACTPlugIn.ActionEditPages.AddHeadersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GingerPACTPlugIn.ActionEditPages"
        mc:Ignorable="d"
        Title="Select Headers to add" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="234*"/>
            <RowDefinition Height="35*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="MainGrid"/>
        <StackPanel HorizontalAlignment="Right" Grid.Row="1" Orientation="Horizontal">
            <Button x:Name="OKButton" Click="OKButton_Click" Content="OK" HorizontalAlignment="Left"  Width="45" Margin="5"/>
            <Button x:Name="CancelButton" Click="CancelButton_Click" Content="Cancel" HorizontalAlignment="Left"  Width="45" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
